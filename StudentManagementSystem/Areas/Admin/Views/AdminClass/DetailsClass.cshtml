@model StudentManagementSystem.Core.Models.Admin.Class.ClassDetailsViewModel

<div class="container mt-5">
    <h2>Class Details</h2>
    <hr />
    <div class="col-md-9">
        <h3>@Model.Name</h3>
        <p><strong>Teacher:</strong> @Model.Teacher</p>
    </div>
</div>

<!-- Students Table and Action Buttons Section -->
<div class="row">
    <!-- Left Column: Courses Table (smaller and scrollable) -->
    <div class="col-md-8">
        <h4>Students</h4>
        @if (Model.Students.Any())
        {
            <!-- Scrollable Table Container -->
            <div style="max-height: 150px; width: 75%; overflow-y: auto;">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Students Names</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model.Students)
                        {
                            <tr>
                                <td>@student</td> 
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p>No Students assigned to this Class.</p>
        }
    </div>

    <!-- Right Column: Action Buttons (Edit/Delete) -->
    <div class="col-md-4">
        <div class="d-flex flex-column align-items-start justify-content-between">
            <!-- Edit Button -->
            <a href="@Url.Action("EditClass", "AdminClass", new { id = Model.Id })" class="btn btn-warning btn-lg mb-2 w-100">Edit</a>
            <!-- Delete Button -->
            <a href="@Url.Action("DeleteClass", "AdminClass", new { id = Model.Id })"
               class="btn btn-danger btn-lg w-100"
               onclick="return confirm('Are you sure you want to delete this Class  @Model.Name?');">
                Delete
            </a>
        </div>
    </div>
</div>

    <!-- Back Button -->
    <a href="@Url.Action("AllClasses", "AdminClass")" class="btn btn-secondary mt-3">Back to List</a>
</div>
