@model TeacherStudentDetailsViewModel

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <!-- Back button aligned to the left -->
        <a href="@Url.Action("StudentsByClass", "Teacher", new { classId = @Model.ClassId })" class="btn btn-secondary mb-3">Back to List</a>

        <!-- Centered Heading -->
        <h2 class="mx-auto mb-3 text-center">Student Details</h2>
    </div>

    <hr />

    <div class="card mx-auto" style="max-width: 40rem;">
        <div class="card-body">
            <h5 class="card-title text-center">@Model.StudentName</h5>
            <h6 class="card-subtitle mb-2 text-muted text-center">@Model.ClassName</h6>
        </div>
    </div>

    <div class="mt-4">
        <h4 class="text-center">Grades</h4>
        @if (!Model.Grades.Any())
        {
            <p class="text-center text-muted">No grades available for this student.</p>
        }
        else
        {
            <div class="table-responsive mx-auto" style="max-height: 400px; max-width: 60%; overflow-y: auto;">
                <!-- Approx. height for 10 rows -->
                <table class="table table-bordered table-sm table-striped mx-auto">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Course Name</th>
                            <th>Grade</th>
                            <th>Grade Type</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Grades.Count(); i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.Grades[i].CourseName</td>
                                <td>@Model.Grades[i].GradeScore</td>
                                <td>@Model.Grades[i].GradeType</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-action="EditGrade" asp-route-gradeId="@Model.Grades[i].Id">Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-action="DeleteGrade" asp-route-gradeId="@Model.Grades[i].Id" onclick="return confirm('Are you sure you want to delete this grade?');">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-secondary" asp-action="AddGrade" asp-route-studentId="@Model.StudentId">Add Grade</a>
    </div>

    <div class="mt-4">
        <h4 class="text-center">Absences</h4>
        @if (!Model.Absences.Any())
        {
            <p class="text-center text-muted">No absences available for this student.</p>
        }
        else
        {
            <div class="table-responsive mx-auto" style="max-height: 200px;max-width: 60%; overflow-y: auto;">
                <!-- Approx. height for 5 rows -->
                <table class="table table-bordered table-sm table-striped mx-auto">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Course Name</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Absences.Count(); i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.Absences[i].CourseName</td>
                                <td>@Model.Absences[i].Date</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-action="EditAbsence" asp-route-id="@Model.Absences[i].Id">Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-action="DeleteAbsence" asp-route-id="@Model.Absences[i].Id" onclick="return confirm('Are you sure you want to delete this absence?');">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-secondary" asp-action="AddAbsence" asp-route-studentId="@Model.StudentId">Add Absence</a>
    </div>

    <div class="mt-4">
        <h4 class="text-center">Remarks</h4>
        @if (!Model.Remarks.Any())
        {
            <p class="text-center text-muted">No remarks available for this student.</p>
        }
        else
        {
            <div class="table-responsive mx-auto" style="max-height: 200px;max-width: 60%; overflow-y: auto;">
                <!-- Approx. height for 5 rows -->
                <table class="table table-bordered table-sm table-striped mx-auto">
                    <thead class="thead-dark">
                        <tr>
                            <th>#</th>
                            <th>Course Name</th>
                            <th>Remark Text</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.Remarks.Count(); i++)
                        {
                            <tr>
                                <td>@(i + 1)</td>
                                <td>@Model.Remarks[i].CourseName</td>
                                <td>@Model.Remarks[i].RemarkText</td>
                                <td>
                                    <a class="btn btn-primary btn-sm" asp-action="EditRemark" asp-route-remarkId="@Model.Remarks[i].Id">Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-action="DeleteRemark" asp-route-remarkId="@Model.Remarks[i].Id" onclick="return confirm('Are you sure you want to delete this remark?');">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a class="btn btn-secondary" asp-action="AddRemark" asp-route-studentId="@Model.StudentId">Add Remark</a>
    </div>
</div>
