@model CourseFormViewModel
@{
    ViewData["Title"] = "Add Course";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Course Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="4" class="form-control" placeholder="Description..."></textarea>
            <span asp-validation-for="Description" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TeacherId"></label>
            <select asp-for="TeacherId" class="form-control">
                @foreach (var teacher in Model.Teachers)
                {
                    <option value="@teacher.Id">@teacher.Name</option>
                }
            </select>
            <span asp-validation-for="TeacherId" class="small text-danger"></span>
        </div>

        <div class="text-center">
            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </div>
        </form>
    </div>
</div>

