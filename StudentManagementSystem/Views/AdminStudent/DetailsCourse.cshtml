@model CourseDetailsViewModel

<div class="container mt-5">
    <h2>Course Details</h2>
    <hr />
        <div class="col-md-9">
            <h3>@Model.Name</h3>
            <p><strong>Teacher:</strong> @Model.Teacher</p>
            <p><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-flex flex-column align-items-end justify-content-between">
            <!-- Edit Button -->
            <a href="@Url.Action("EditCourse", "AdminStudent", new { id = Model.Id })" class="btn btn-warning btn mb-2 w-100">Edit</a>
            <!-- Delete Button -->
            <a href="@Url.Action("DeleteCourse", "AdminStudent", new { id = Model.Id })"
               class="btn btn-danger btn w-100"
               onclick="return confirm('Are you sure you want to delete this Course @Model.Name?');">
                Delete
            </a>
        </div>

        <!-- Back Button -->
        <a href="@Url.Action("AllCourses", "AdminStudent")" class="btn btn-secondary mt-3">Back to List</a>
    </div>
